<div class="navbar-container">
  
  <div class="navbar">

    <div class="navbar-title-left">
      <%= link_to "Keegan Beaulieu", root_path, class: "title-link" %>
    </div>

    <div class="navbar-albums-center">
      <ul>
        <% Album.all.each do |album| %>
          
          <% if album.id == params[:id].to_i %>
            <li>
              <%= link_to album.name, album_path(album), class: "av-link current-album" %>
              <% if current_user && current_user.admin %>
                <a id="hide-btn" href="#"><%= icon('fas', 'edit') %></a>
              <% end %>
            </li>
          <% else %>
            <li><%= link_to album.name, album_path(album), class: "av-link" %></li>
          <% end %>
        <% end %>
        <% if current_user && current_user.admin %>
          <li><%= link_to icon('fas', 'plus'), new_album_path, class: "av-link" %></li>
        <% end %>
      </ul>
    </div>

    <div class="navbar-title-right">
      <p>About</p>
    </div>
</div>

